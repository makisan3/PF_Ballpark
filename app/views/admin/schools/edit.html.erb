<div class="container">
  <h2 class="page-title">-<%= @school.high_school_name %>-</h2>
  <%= form_with model: @school, url: admin_school_path, method: :patch, local: true do |f| %>
  <p>学校ID<%= @school.id %></p>
  <table class="table table-bordered mt-3">
    <tbody>
      <tr>
        <td>
          <%= f.label "学校名" %>
          <%= f.text_field :high_school_name %>
        </td>
        <td>
          <%= f.label "e-mail" %>
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "監督" %>
          <%= f.text_field :manager_name %>
        </td>
        <td>
          <%= f.label "所在地" %>
          <%= f.text_field :address %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label "寮" %>
          <%= f.select :dormitory, options_for_select(School.dormitories.keys ,selected: @school.dormitory), {prompt: "選択してください"}  %>
        </td>
        <td>
          <%= f.label "甲子園出場回数" %>
          春 <%= f.text_field :spring_koshien_times, :size=>"3" %> 夏 <%= f.text_field :summer_koshien_times, :size=>"3" %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="form-group col-md-12">
    <%= f.label "学校ステータス", class: "col-md-4 control-label" %>
    <%= f.radio_button :school_status, false %>
  　<%= f.label :school_status, "有効", {value: :false, style: "display: inline-block;"} %>
  　<%= f.radio_button :school_status, true %>
  　<%= f.label :school_status, "退会", {value: :true, style: "display: inline-block;"} %>
  </div>

  <div class="actions col-md-12">
    <%= link_to "保存せずに戻る", admin_schools_path, class: "glyphicon glyphicon-home btn btn-info" %>
    <%= f.submit "編集内容を保存する",class: "btn btn-primary save col-xs-6" %>
  </div>

  <% end %>


</div>