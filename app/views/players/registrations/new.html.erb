<div class="container">
  <h2>-選手登録-</h2>
  <%= form_with model: @player, url: player_registration_path, id: 'new_player', class: 'new_player', local: true do |f| %>
    <%= render "players/shared/error_messages", resource: resource %>
  <table class="table">
    <tbody>
      <tr>
        <th>名前</th>
        <td>
          <div class="field">
            <%= f.text_field :name, autofocus: true, placeholder: '藤浪 翔平' %>
          </div>
        </td>
      </tr>
    <tr>
      <th>在籍校</th>
      <td>
        <div class="field">
          <%= f.text_field :school, placeholder: '〇〇中学校' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>在籍チーム</th>
      <td>
        <div class="field">
          <%= f.text_field :enrollment, placeholder: '野球部or〇〇シニア、〇〇ボーイズ等' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>学年</th>
      <td>
        <div class="field">
          <%= f.select :grade, options_for_select(Player.grades.keys), {prompt: "選択してください"} %>
        </div>
      </td>
    </tr>
    <tr>
      <th>活動拠点</th>
      <td>
        <div class="field">
          <%= f.select :base, options_for_select(Player.bases.keys), {prompt: "選択してください"} %>
        </div>
      </td>
    </tr>
    <tr>
      <th>e-mail</th>
      <td>
        <div class="field">
          <%= f.text_field :email, placeholder: 'sample@example.com' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        パスワード確認用
      </th>
      <td>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '確認用' %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-secondary center-block" %>
  </div>
  <% end %>

</div>