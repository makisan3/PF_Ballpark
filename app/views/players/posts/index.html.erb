<div class="container">
  <h2>-All post-</h2>
    <% @posts.each do |post| %>
    <div>

      <p><%= post.player.name %></p>
      <%= attachment_image_tag post.player, :player_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <%= link_to post_path(post.id) do %>
        <p><%= post.title %></p>
      <% end %>
      <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <% end %>

</div>