<div class="container">

  <h2>-選手ログイン-</h2>
  <%= form_with model: @player, url: player_session_path, local: true do |f| %>
    <div class="text-center">
      <div class="login d-flex">
        <p class="login-text">e-mail</p>
        <div class="login-text"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      <div class="login d-flex">
        <p class="login-text">password</p>
        <div class="login-text"><%= f.password_field :password, autocomplete: "current-password" %></div>
      </div>
    </div>

    <%# if devise_mapping.rememberable? %>
      <!--<div class="field">-->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      <!--</div>-->
    <%# end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
      <%= link_to 'ゲストログイン', new_player_session_path, class: "btn btn-secondary" %>
    </div>
  <% end %>

  <%= render "players/shared/links" %>

</div>