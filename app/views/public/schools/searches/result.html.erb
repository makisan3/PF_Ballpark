<div class="container">
  <h2 class="page-title search">-検索結果-</h2>
    <% @players.each do |player| %>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="result-list row">
            <div class="result-player col-sm-9">
              <%= attachment_image_tag player, :player_image, fallback: "no_image.jpg", class: "icon-search" %>
              <strong><%= link_to player.name, player_path(player.id), class: "result-name ml-4 mr-4" %></strong>
              <%= player.base %>/<%= player.grade %><br>
              <%= player.school %>/<%= player.enrollment %>
            </div>
            <div class="result-option col-sm-3 text-right ">
              <% if current_school.already_liked?(player) %>
                <%= link_to '', player_like_path(player), method: :delete, class: "fas fa-heart fa-2x mr-3" %>
              <% else %>
                <%= link_to '', player_likes_path(player_id: player.id), method: :postt, class: "far fa-heart fa-2x mr-3" %>
              <% end %>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  </table>
</div>